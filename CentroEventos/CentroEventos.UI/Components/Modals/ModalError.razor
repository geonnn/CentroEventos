@rendermode InteractiveServer
@if(visible)
{
    <div class="dialogo-contenedor">
        <div class="dialogo-error">
                <h3>Error!</h3>
                <p>@Mensaje</p>
            <div class="centro">
                <button class="btn btn-danger" @onclick="Cerrar">Cerrar</button>
            </div>
        </div>  
    </div>
}
@code
{
    private bool visible = false;
    public string Mensaje {get;set;}="";
    public void Mostrar(string mensajeError)
    {
        Mensaje = mensajeError;
        visible=true;
        StateHasChanged();
    }
    
    void Cerrar()
    {
        visible=false;
        Mensaje = "";
        StateHasChanged();
    }
}
